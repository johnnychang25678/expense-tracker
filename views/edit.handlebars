<div class="container">
  <div class="form-container mt-3">
    <div class="description mt-3 mb-3 row">
      <small class="d-inline-block col-2">*必填欄位</small>
      <div class="col-8 d-flex justify-content-center">
        <span class="fw-bold">請修改你的支出</span>
      </div>

    </div>
    <form action="/expenses/{{record._id}}?_method=PUT" method="POST">
      <div class="form-group row mb-4 p-2">
        <label for="name" class="col-2 col-form-label">
          名稱<sup>*</sup>：
        </label>
        <div class="col-8">
          <input type="text" name="name" class="form-control" id="name" value="{{record.name}}" required>
        </div>
      </div>

      <div class="form-group row mb-4 p-2">
        <label for="date" class="col-2 col-form-label">
          日期<sup>*</sup>：
        </label>
        <div class="col-8">
          <input type="date" name="date" class="form-control" id="date" value="{{record.date}}" required>
        </div>
      </div>

      <div class="form-group row mb-4 p-2">
        <label for="category" class="col-2 col-form-label">
          類別<sup>*</sup>：
        </label>
        <div class="col-8">
          <select name="category" id="category" class="form-select" required>
            <option value="home" {{ifSelect record.category 'home' }}>家居物業</option>
            <option value="traffic" {{ifSelect record.category 'traffic' }}>交通出行</option>
            <option value="entertainment" {{ifSelect record.category 'entertainment' }}>休閒娛樂</option>
            <option value="food" {{ifSelect record.category 'food' }}>餐飲食品</option>
            <option value="others" {{ifSelect record.category 'others' }}>其他</option>
          </select>
        </div>
      </div>

      <div class="form-group row mb-4 p-2">
        <label for="merchant" class="col-2 col-form-label">
          商家：
        </label>
        <div class="col-8">
          <input type="text" name="merchant" class="form-control" id="merchant" value="{{record.merchant}}" required>
        </div>
      </div>

      <div class="form-group row mb-4 p-2">
        <label for="amount" class="col-2 col-form-label">
          金額<sup>*</sup>：
        </label>
        <div class="col-8">
          <input type="number" name="amount" class="form-control" id="amount" value="{{record.amount}}" required>
        </div>
      </div>

      <div class="d-flex justify-content-center mb-4">
        <button type="submit" class="btn btn-dark">送出</button>

      </div>

    </form>

  </div>
</div>